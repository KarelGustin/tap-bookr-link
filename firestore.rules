rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the profile
    function isProfileOwner(profileId) {
      return isAuthenticated() && 
             resource.data.user_id == request.auth.uid;
    }
    
    // Profiles collection
    match /profiles/{profileId} {
      // Anyone can read published profiles
      allow read: if resource.data.status == 'published' || 
                     (isAuthenticated() && resource.data.user_id == request.auth.uid);
      
      // Only profile owner can create/update/delete
      allow create: if isAuthenticated() && 
                       request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isProfileOwner(profileId);
      
      // Subcollections
      match /subscriptions/{subscriptionId} {
        allow read, write: if isProfileOwner(profileId);
      }
      
      match /invoices/{invoiceId} {
        allow read, write: if isProfileOwner(profileId);
      }
      
      match /payment_methods/{paymentMethodId} {
        allow read, write: if isProfileOwner(profileId);
      }
    }
    
    // Handle availability check (public read for checking if handle exists)
    match /handle_availability/{handle} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
